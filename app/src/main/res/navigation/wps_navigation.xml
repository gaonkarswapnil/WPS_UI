<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wps_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.wpsui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_statusStateFragment"
            app:destination="@id/statusStateFragment" />
    </fragment>

    <fragment
        android:id="@+id/statusStateFragment"
        android:name="com.example.wpsui.StatusStateFragment"
        android:label="fragment_status_state"
        tools:layout="@layout/fragment_status_state">
        <argument
            android:name="payroll"
            app:argType="com.example.wpsui.Payroll" /> <!-- The correct usage -->
    </fragment>

</navigation>
