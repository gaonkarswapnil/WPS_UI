<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Number -->
    <View
        android:id="@+id/shimmerNumber"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_24dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Account Name -->
    <View
        android:id="@+id/shimmerAccountName"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintStart_toEndOf="@id/shimmerNumber"
        app:layout_constraintEnd_toStartOf="@id/shimmerAmount"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Amount -->
    <View
        android:id="@+id/shimmerAmount"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_24dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerEmployerName"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintStart_toEndOf="@id/shimmerNumber"
        app:layout_constraintEnd_toStartOf="@id/shimmerGcc"
        app:layout_constraintTop_toBottomOf="@id/shimmerAccountName" />

    <View
        android:id="@+id/shimmerAccountNumber"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintStart_toEndOf="@id/shimmerNumber"
        app:layout_constraintEnd_toStartOf="@id/shimmerGcc"
        app:layout_constraintTop_toBottomOf="@id/shimmerEmployerName" />

    <View
        android:id="@+id/shimmerGcc"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_24dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerAmount" />

    <View
        android:id="@+id/shimmerDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        app:layout_constraintStart_toEndOf="@id/shimmerAccountNumber"
        app:layout_constraintEnd_toStartOf="@id/shimmerGcc"
        app:layout_constraintTop_toBottomOf="@id/shimmerAccountNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>