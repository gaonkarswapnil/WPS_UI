<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusStateFragment">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/scene_status_state">

        <!-- Blue Header with content inside -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_view"
            android:layout_width="0dp"
            android:layout_height="312dp"
            android:background="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Title -->
            <TextView
                android:layout_marginTop="120dp"
                android:id="@+id/tv_payroll_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:text="Title"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
               />

            <!-- Payroll Row -->
            <LinearLayout
                android:id="@+id/ll_payroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv_payroll_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tv_payroll_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payroll No:"
                    android:textColor="@color/label"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_payroll_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAYROLL.REF.0017123456"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/iv_copy"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/filled"
                    app:tint="@color/label" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/main_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="280dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:backgroundTint="@color/status_default"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_card_topcorners">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>





    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_data"
        android:forceHasOverlappingRendering="true"
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:backgroundTint="@android:color/transparent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">


            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_main_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="8dp"
                        app:contentPadding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_payroll">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Payroll Amount Section -->
                            <TextView
                                android:id="@+id/tv_payroll_amount_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/amount_payroll"
                                android:textAlignment="center"
                                android:textColor="@color/label"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:baselineAligned="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_payroll_amount_label">

                                <TextView
                                    android:id="@+id/tv_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bhd"
                                    android:textColor="@color/light_blue"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="1,000."
                                    android:textColor="@color/light_blue"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_decimal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="000"
                                    android:textColor="@color/light_blue"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_salaries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:layout_marginTop="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cv_main_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">

                            <!-- Salaries Section -->
                            <TextView
                                android:id="@+id/tv_salaries_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:text="@string/salaries"
                                android:textColor="@color/label"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />

                            <TextView
                                android:id="@+id/tv_salaries_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="(3)"
                                android:textColor="@color/no_data_text"
                                android:textSize="16sp"
                                app:layout_constraintBaseline_toBaselineOf="@id/tv_salaries_label"
                                app:layout_constraintStart_toEndOf="@id/tv_salaries_label" />


                            <TextView
                                android:id="@+id/tv_review_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:padding="8dp"
                                android:text="@string/review"
                                android:textColor="@color/status_authorized_text"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBaseline_toBaselineOf="@id/tv_salaries_label"
                                app:layout_constraintEnd_toStartOf="@id/iv_review_arrow" />

                            <ImageView
                                android:id="@+id/iv_review_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/chevron_right"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5"
                                app:tint="@color/status_authorized_text" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cv_salaries">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="24dp">

                            <!-- Status Section -->
                            <TextView
                                android:id="@+id/tv_status_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status"
                                android:textColor="@color/label"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_status_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="4dp"
                                android:text="FAILED"
                                android:textColor="@color/status_failed_text"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBaseline_toBaselineOf="@id/tv_status_label"
                                app:layout_constraintEnd_toEndOf="parent" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/divider"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_status_label" />

                            <!-- Payment Details Section -->
                            <TextView
                                android:id="@+id/tv_payment_details_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:text="@string/payment_detail"
                                android:textColor="@color/label"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_status_label" />

                            <!-- Debit Account Row -->
                            <TextView
                                android:id="@+id/tv_debit_account_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/debit_account"
                                android:textColor="@color/no_data_text"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_payment_details_title" />

                            <TextView
                                android:id="@+id/tv_debit_account_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BHD Account"
                                android:textColor="@color/label"
                                android:textSize="14sp"
                                app:layout_constraintBaseline_toBaselineOf="@id/tv_debit_account_label"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <!-- Creation Date Row -->
                            <TextView
                                android:id="@+id/tv_creation_date_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/creation_date"
                                android:textColor="@color/no_data_text"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_debit_account_label" />

                            <TextView
                                android:id="@+id/tv_creation_date_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Jun 2025"
                                android:textColor="@color/label"
                                android:textSize="14sp"
                                app:layout_constraintBaseline_toBaselineOf="@id/tv_creation_date_label"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <!-- Payment Date Row -->
                            <TextView
                                android:id="@+id/tv_payment_date_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/payment_date"
                                android:textColor="@color/no_data_text"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_creation_date_label" />

                            <TextView
                                android:id="@+id/tv_payment_date_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 Jun 2025"
                                android:textColor="@color/label"
                                android:textSize="14sp"
                                app:layout_constraintBaseline_toBaselineOf="@id/tv_payment_date_label"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <!-- Employer Section -->
                            <TextView
                                android:id="@+id/tv_employer_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:text="@string/employer"
                                android:textColor="@color/label"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_payment_date_label" />

                            <TextView
                                android:id="@+id/tv_employer_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Mohammed Ahmed Abdulla Al-Baloshi"
                                android:textColor="@color/label"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_employer_title" />

                            <!-- Description Section -->
                            <TextView
                                android:id="@+id/tv_description_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:text="@string/description"
                                android:textColor="@color/label"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_employer_name" />

                            <TextView
                                android:id="@+id/tv_description_optional"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/optional"
                                android:textColor="@color/no_data_text"
                                android:textSize="14sp"
                                app:layout_constraintBaseline_toBaselineOf="@id/tv_description_title"
                                app:layout_constraintStart_toEndOf="@id/tv_description_title" />

                            <TextView
                                android:id="@+id/tv_description_placeholder"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Add details to your payroll"
                                android:textColor="@color/no_data_text"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_description_title" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/ll_authorize_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/cv_status">

                        <Button
                            android:id="@+id/btn_authorize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="@string/authorize_payment"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingVertical="10dp"
                            app:background="@drawable/bg_button_primary"
                            app:backgroundTint="@color/dark_blue" />

                        <Button
                            android:id="@+id/btn_reject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reject"
                            android:textColor="@color/dark_blue"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingVertical="10dp"
                            app:background="@drawable/bg_button_secondary"
                            app:backgroundTint="@color/divider" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_cancel_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/cv_status">
                        <Button
                            android:id="@+id/btn_cancel_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint = "@color/white"
                            app:background="@drawable/bg_button_border"
                            android:text="@string/cancel_payment"
                            android:textColor="@color/dark_blue"
                            android:textSize="16sp"
                            android:paddingVertical="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>
