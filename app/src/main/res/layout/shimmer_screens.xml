<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <View
            android:id="@+id/header_line1"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/header_line2"
            android:layout_width="180dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/header_line1"
            app:layout_constraintStart_toStartOf="@id/header_line1" />

        <View
            android:id="@+id/header_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toTopOf="@id/header_line1"
            app:layout_constraintBottom_toBottomOf="@id/header_line2"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/header_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/status_row"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/salaries_row"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/status_row"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/creation_date_row"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/salaries_row"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/payment_date_row"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/creation_date_row"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/amount_row"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/payment_date_row"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/button_placeholder"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@color/shimmer_placeholder"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/amount_row"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
